<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Set màu nền-->
    <gradient
        android:angle="45"
        android:startColor="#F36890"
        android:endColor="#FA7F67"
        android:type="linear"/>
    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="26dp" >
    </corners>
</shape>